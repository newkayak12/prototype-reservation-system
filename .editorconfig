root = true

[*.{kt,kts}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 4
continuation_indent_size = 4
tab_width = 4

max_line_length = 100

ij_kotlin_imports_layout = *, javax.**, java.**
ij_kotlin_use_fq_names = false
ij_kotlin_align_multiline_parameters = true
ij_kotlin_align_multiline_parameters_in_calls = true
ij_kotlin_allow_trailing_comma = true
ij_kotlin_keep_indents_on_empty_lines = false
ij_kotlin_code_style = official


[*.java]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 4
tab_width = 4

max_line_length = 100

# IntelliJ import 설정 참고용
ij_java_imports_layout = *, javax.**, java.**
ij_java_use_fq_names = false